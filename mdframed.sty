}

\newrobustcmd*\if@md@pageodd{%
     \zref@refused{md@pagelabel-\the\value{md@zref@counter}}%
     \ifodd\zref@extract{md@pagelabel-\the\value{md@zref@counter}}{md@pagevalue}%
         \edef\md@reserveda{\md@pageisodd}%
     \else
